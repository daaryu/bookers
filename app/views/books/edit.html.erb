<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %>error:titleもしくはbodyに空白があります
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
<%= form_with model:@book,local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field:title %>
  <h4>Body</h4>
  <%= f.text_area:body %>
  <p class"action"><%= f.submit'Update Book' %></p>

  <%= link_to "Show",book_path %>
  |
 <%= link_to "Back", books_path %>
<% end %>
